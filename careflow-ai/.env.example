# =====================================================
# CAREFLOW AI - ENVIRONMENT CONFIGURATION
# =====================================================
# Copy this file to .env.local and configure with your values
# Never commit .env.local to version control

# =====================================================
# REQUIRED CONFIGURATION
# =====================================================

# Supabase Database (Required)
# Get from: https://supabase.com/dashboard/project/_/settings/api
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Google Gemini AI (Required)
# Get from: https://aistudio.google.com/app/apikey
VITE_GEMINI_API_KEY=your_gemini_api_key

# =====================================================
# OPTIONAL CONFIGURATION
# =====================================================

# Analytics & Monitoring
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Google Analytics (if analytics enabled)
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Stripe Payment Processing (if enabled)
VITE_STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
VITE_ENABLE_PAYMENTS=false

# Feature Flags
VITE_ENABLE_AI_FEATURES=true
VITE_ENABLE_OFFLINE_SUPPORT=true
VITE_ENABLE_PUSH_NOTIFICATIONS=true
VITE_ENABLE_TELEHEALTH=false

# Development Settings
VITE_DEV_MODE=false
VITE_DEBUG_API=false
VITE_MOCK_AUTH=false

# API Configuration
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_CACHE_TTL=300000

# =====================================================
# ENVIRONMENT SPECIFIC
# =====================================================

# Development Environment
NODE_ENV=development
VITE_LOG_LEVEL=debug

# Production Environment (uncomment for production)
# NODE_ENV=production
# VITE_LOG_LEVEL=error

# Staging Environment (uncomment for staging)
# NODE_ENV=staging
# VITE_LOG_LEVEL=warn

# =====================================================
# SECURITY CONFIGURATION
# =====================================================

# CORS Origins (comma-separated)
VITE_CORS_ORIGINS=http://localhost:5173,https://yourdomain.com,https://www.yourdomain.com

# Security Headers
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true
VITE_ENABLE_FRAME_PROTECTION=true

# =====================================================
# MOBILE APP CONFIGURATION
# =====================================================

# Capacitor Configuration
VITE_APP_ID=com.careflow.ai
VITE_APP_NAME=CareFlow AI
VITE_APP_VERSION=1.0.0

# Push Notifications
VITE_VAPID_PUBLIC_KEY=your_vapid_public_key
VITE_PUSH_SERVICE_URL=https://your-push-service.com

# =====================================================
# INTEGRATION CONFIGURATION
# =====================================================

# HR Platform Integration
VITE_HR_PLATFORM_URL=https://hr.yourdomain.com
VITE_HR_PLATFORM_API_KEY=your_hr_api_key

# ComplyFlow Integration
VITE_COMPLYFLOW_URL=https://complyflow.yourdomain.com
VITE_COMPLYFLOW_API_KEY=your_complyflow_api_key

# Third-party Integrations
VITE_TWILIO_ACCOUNT_SID=your_twilio_sid
VITE_TWILIO_AUTH_TOKEN=your_twilio_token

# =====================================================
# MONITORING & LOGGING
# =====================================================

# Error Reporting
VITE_SENTRY_DSN=https://your-sentry-dsn
VITE_ENABLE_SENTRY_SESSION_REPLAY=false

# Performance Monitoring
VITE_ENABLE_CORE_WEB_VITALS=true
VITE_PERFORMANCE_SAMPLE_RATE=0.1

# Logging Configuration
VITE_LOG_TO_CONSOLE=true
VITE_LOG_TO_REMOTE=false
VITE_REMOTE_LOG_ENDPOINT=https://logs.yourdomain.com/api/logs

# =====================================================
# DEVELOPMENT ONLY
# =====================================================

# Mock Services (development only)
VITE_USE_MOCK_SERVICES=false
VITE_MOCK_API_DELAY=1000

# Hot Reload
VITE_HMR_OVERLAY=true
VITE_FAST_REFRESH=true